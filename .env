# Configuration des Variables d'Environnement - Lloyds GO!
# Copiez ce fichier vers .env et configurez vos valeurs

# Environnement
NODE_ENV=production

# Sécurité JWT (Générez une clé sécurisée)
JWT_SECRET=votre-secret-jwt-super-securise-123456789

# API CryptoGecko (Gratuit)
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# API CoinMarketCap (Optionnel - nécessite une clé API)
COINMARKETCAP_API_KEY=votre-cle-api-coinmarketcap

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS (Origines autorisées)
ALLOWED_ORIGINS=https://votre-site.netlify.app,https://localhost:8888

# Base de données
DB_FILE=users.json

# Email (Optionnel - pour les notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=votre-email@gmail.com
EMAIL_PASS=votre-mot-de-passe-app

# Configuration Netlify
NETLIFY_SITE_ID=votre-site-id
NETLIFY_ACCESS_TOKEN=votre-access-token
