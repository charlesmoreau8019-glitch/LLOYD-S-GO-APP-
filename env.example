# Configuration du serveur
NODE_ENV=development
PORT=3000

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/lloyds_go

# JWT Secret
JWT_SECRET=votre_jwt_secret_tres_securise_ici
JWT_EXPIRES_IN=7d

# APIs externes
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINCAP_API_URL=https://api.coincap.io/v2

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des emails (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASS=votre_mot_de_passe_app

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuration des uploads
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880

# Configuration des webhooks (optionnel)
WEBHOOK_SECRET=votre_webhook_secret
